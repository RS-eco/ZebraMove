doi = {10.1111/1365-2664.12453},
file = {:home/mabi/Documents/Wissenschaft/Journals/Journal of Applied Ecology/Garc{\'{i}}a-Vald{\'{e}}s et al.{\_}2015{\_}Evaluating the combined effects of climate and land-use change on tree species distributions.pdf:pdf},
isbn = {1365-2664},
issn = {00218901},
journal = {Journal of Applied Ecology},
keywords = {Iberian Peninsula,Mediterranean,climate change mitigation,climatic disequilibrium,deforestation,dynamics,fragmentation,habitat loss and,metapopulation dynamics,non-equilibrium,reforestation,stochastic patch occupancy model},
pages = {902--912},
