file = {:home/mabi/Documents/Wissenschaft/Journals/Journal of Animal Ecology/Van Moorter et al.{\_}2016{\_}Movement is the glue connecting home ranges and habitat selection.pdf:pdf},
isbn = {1365-2656 (Electronic)$\backslash$r0021-8790 (Linking)},
