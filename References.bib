doi = {10.1111/j.1523-1739.2010.01450.x},
file = {:home/mabi/Documents/Wissenschaft/Journals/Conservation Biology/Gilbert-Norton et al.{\_}2010{\_}A meta-analytic review of corridor effectiveness.pdf:pdf},
