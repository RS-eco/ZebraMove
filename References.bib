file = {:home/mabi/Documents/Wissenschaft/Journals/Journal of Animal Ecology/Goheen et al.{\_}2010{\_}Large herbivores facilitate savanna tree establishment via diverse and indirect pathways.pdf:pdf},
isbn = {1365-2656},
