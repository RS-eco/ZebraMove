journal = {Biological Conservation},
keywords = {Connectivity,Conservation planning,Dispersal,Hoolock hoolock,Land-use planning,Matrix resistance},
pages = {124--132},
publisher = {Elsevier Ltd},
title = {{Incorporating movement behavior into conservation prioritization in fragmented landscapes: An example of western hoolock gibbons in Garo Hills, India}},
