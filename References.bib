doi = {10.1098/rstb.2004.1592},
file = {:home/mabi/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Chape et al. - 2005 - Measuring the extent and effectiveness of protected areas as an indicator for meeting global biodiversity targets.pdf:pdf},
