file = {:home/mabi/Documents/Wissenschaft/Journals/Movement ecology/Jeltsch et al.{\_}2013{\_}Integrating movement ecology with biodiversity research - exploring new avenues to address spatiotemporal biodiversi.pdf:pdf},
