doi = {10.1017/S0376892905001918},
file = {:home/mabi/Documents/Wissenschaft/Journals/Environmental Conservation/Gadd{\_}2005{\_}Conservation outside of parks attitudes of local people in Laikipia, Kenya.pdf:pdf},
isbn = {0376-8929},
