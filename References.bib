isbn = {4314765429},
issn = {20711050},
journal = {Sustainability},
keywords = {Adaptation,Climate change,Climate variability,Knowledge,Perceptions,Policy,Smallholders},
number = {12},
pages = {3302--3325},
title = {{Local perceptions and responses to climate change and variability: The case of Laikipia District, Kenya}},
