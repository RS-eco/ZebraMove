issn = {0030-6053},
keywords = {botswana,equus burchelli antiquorum,fencing,gps,migration,ungulate,wildlife corridor},
number = {02},
pages = {210--216},
title = {{Will reconnecting ecosystems allow long-distance mammal migrations to resume? A case study of a zebra Equus burchelli migration in Botswana}},
volume = {45},
year = {2011}
}
@article{Bartlam-Brooks2013,
abstract = {Historically, ungulate migrations occurred in most grassland and boreal$\backslash$nwoodland ecosystems, but many have been lost due to increasing habitat$\backslash$nloss and fragmentation. With the rate of environmental change$\backslash$nincreasing, identifying and prioritizing migration routes for$\backslash$nconservation has taken on a new urgency. Understanding the cues that$\backslash$ndrive long-distance animal movements is critical to predicting the fate$\backslash$nof migrations under different environmental change scenarios and how$\backslash$nlarge migratory herbivores will respond to increasing resource$\backslash$nheterogeneity and anthropogenic influences. We used an individual-based$\backslash$nmodeling approach to investigate the influence of environmental$\backslash$nconditions, monitored using satellite data, on departure date and$\backslash$nmovement speed of migrating zebras in Botswana. Daily zebra movements$\backslash$nbetween dry and rainy season ranges were annotated with coincident$\backslash$nobservations of precipitation from the Tropical Rainfall Measuring$\backslash$nMission data set and Moderate Resolution Imaging$\backslash$nSpectroradiometer-derived normalized difference vegetation index (NDVI).$\backslash$nAn array of increasingly complex movement models representing$\backslash$nalternative hypotheses regarding the environmental cues and controls for$\backslash$nmovement was parameterized and tested. The best and most justified model$\backslash$npredicted daily zebra movement as two linear functions of precipitation$\backslash$nrate and NDVI and included a modeled departure date as a function of$\backslash$ncumulative precipitation. The model was highly successful at replicating$\backslash$nboth the timing and pace of seven actual migrations observed using GPS$\backslash$ntelemetry (R-2=0.914). It shows how zebras rapidly adjust their movement$\backslash$nto changing environmental conditions during migration and are able