doi = {10.1016/j.biocon.2010.02.010},
file = {:home/mabi/Documents/Wissenschaft/Journals/Biological Conservation/Defries, Karanth, Pareeth{\_}2010{\_}Interactions between protected areas and their surroundings in human-dominated tropical landscapes.pdf:pdf},
