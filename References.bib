keywords = {Biodiversity,Biological,Carbon,Carbon: metabolism,Conservation of Natural Resources,Conservation of Natural Resources: methods,Conservation of Natural Resources: trends,Forestry,Forestry: methods,Forestry: trends,Geography,Models,Tanzania,Trees,Trees: growth {\&} development,Trees: metabolism,Tropical Climate,Wood,Wood: growth {\&} development,Wood: metabolism},
