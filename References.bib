file = {:home/mabi/Documents/Wissenschaft/Journals/The Journal of Wildlife Management/Ryan, Knechtel, Getz{\_}2006{\_}Range and habitat selection of African buffalo in South Africa.pdf:pdf},
issn = {0022541X (ISSN)},
