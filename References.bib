doi = {10.1016/j.rse.2011.04.003},
file = {:home/mabi/Documents/Wissenschaft/Journals/Remote Sensing of Environment/Hill et al.{\_}2011{\_}Characterizing vegetation cover in global savannas with an annual foliage clumping index derived from the MODIS BRDF pr.pdf:pdf},
