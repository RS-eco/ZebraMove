journal = {Proceedings of the National Academy of Sciences of the United States of America},
keywords = {Animal Migration,Animals,Deer,Deer: physiology,Ecology,Ecology: methods,Ecosystem,Feeding Behavior,Female,Models, Biological,Movement,Ontario,Seasons,Social Behavior},
number = {49},
