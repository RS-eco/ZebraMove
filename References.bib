author = {Speed, C.W. W and Meekan, M.G. G and Field, I.C. C and McMahon, C.R. R and Harcourt, R.G. G and Stevens, J.D. D and Babcock, R.C. C and Pillans, R.D. D and Bradshaw, C.J. J a.},
doi = {10.1016/j.rsma.2015.05.002},
file = {:home/mabi/Documents/Wissenschaft/Journals/Regional Studies in Marine Science/Speed et al.{\_}2015{\_}Reef shark movements relative to a coastal marine protected area.pdf:pdf},
issn = {23524855},
