file = {:home/mabi/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Forester, Im, Rathouz - 2009 - Accounting for animal movement in estimation of resource selection functions Sampling and data analysis.pdf:pdf},
isbn = {0012-9658},
issn = {00129658},
journal = {Ecology},
keywords = {Animal movement,Case-control,Conditional logistic regression,Elk,Relocation kernel,Resource selection function,Telemetry,Yellowstone},
number = {12},
pages = {3554--3565},
pmid = {20120822},
title = {{Accounting for animal movement in estimation of resource selection functions: Sampling and data analysis}},
