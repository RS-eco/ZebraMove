issn = {1091-6490},
journal = {Proceedings of the National Academy of Sciences of the United States of America},
keywords = {Animal Migration,Animals,Ecology,Ecology: methods,Elephants,Elephants: physiology,Feeding Behavior,Feeding Behavior: physiology,Female,Fourier Analysis,Geographic Information Systems,Male,Models, Biological,Movement,Social Dominance},
