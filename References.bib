file = {:home/mabi/Documents/Wissenschaft/Journals/International Journal of Climatology/Hijmans et al.{\_}2005{\_}Very high resolution interpolated climate surfaces for global land areas.pdf:pdf},
isbn = {1097-0088},
issn = {08998418},
journal = {International Journal of Climatology},
keywords = {ANUSPLIN,Climate,Error,GIS,Interpolation,Precipitation,Temperature,Uncertainty},
