doi = {10.1111/1365-2656.12275},
file = {:home/mabi/Documents/Wissenschaft/Journals/Journal of Animal Ecology/Beyer et al.{\_}2016{\_}'You shall not pass!' Quantifying barrier permeability and proximity avoidance by animals.pdf:pdf},
isbn = {1365-2656},
issn = {00218790},
journal = {Journal of Animal Ecology},
keywords = {Animal movement,Connectivity,Fences,Movement ecology,Rangifer tarandus,Reindeer,Resistance,Resource selection,Roads,Step selection},
