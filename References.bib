doi = {10.1371/journal.pone.0095053},
file = {:home/mabi/Documents/Wissenschaft/Journals/PLoS ONE/Driscoll et al.{\_}2014{\_}The trajectory of dispersal research in conservation biology. Systematic review.PDF:PDF},
isbn = {1932-6203},
