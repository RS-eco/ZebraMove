doi = {10.5194/hess-15-2245-2011},
file = {:home/mabi/Documents/Wissenschaft/Journals/Hydrology and Earth System Sciences/Mango et al.{\_}2011{\_}Land use and climate change impacts on the hydrology of the upper Mara River Basin, Kenya Results of a modeling study.pdf:pdf},
isbn = {1027-5606},
