isbn = {10452249 (ISSN)},
issn = {10452249},
journal = {Behavioral Ecology},
keywords = {Animal movement,Associations,Equids,Grevy's zebra,Sexual harassment,Social organization},
number = {5},
pages = {860--865},
title = {{Male harassment influences female movements and associations in Grevy's zebra (Equus grevyi)}},
volume = {18},
year = {2007}
}
@article{Sundaresan2012,
