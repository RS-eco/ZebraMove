journal = {Oecologia},
keywords = {Animal groups,Equids,Individual associations,Social structure},
number = {1},
pages = {140--149},
pmid = {16964497},
title = {{Network metrics reveal differences in social organization between two fission-fusion species, Grevy's zebra and onager}},
